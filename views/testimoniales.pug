extends ./layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
        blockquote.text-center Lee sobre nuestros cliente y sus experiencias
        include ./layout/includes/bloque_testimoniales

        .row
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales" method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", class="form-control", type="text", placeholder="Tu Nombre", name="nombre", value=nombre)
                            .form-group
                                label(for="correo") Correo electrónico
                                input(id="correo", class="form-control", type="email", placeholder="Tu correo electróncio", name="correo", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(class="form-control", name="mensaje", rows="3", placeholder="Tu mensaje...")= mensaje
                            input(type="submit" class="btn btn-success btn-block" value="Agregar")